<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fed"
    tools:context=".DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

        <ImageView
            android:id="@+id/MovieBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/flash" />
        <ImageView
            android:id="@+id/MovieBanner2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/flash_dp"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/MovieRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="9.2"
            android:textSize="30dp"
            android:layout_marginLeft="140dp"
            />

        <TextView
            android:id="@+id/MovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="The Flash"
            android:textSize="40dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/MovieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:justificationMode="inter_word"
        android:text="Barry Allen, a forensic investigator in Central City, gains the power of superhuman speed from a freak accident. He decides to use it to fight crime as the Flash, a costumed superhero."
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MovieCastRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"


        />

</LinearLayout>